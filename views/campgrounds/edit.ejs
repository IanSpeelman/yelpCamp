<%- layout("./layout/boilerplate") %>
<div class="container">
	<form
		novalidate
		class="col-6 mx-auto needs-validation"
		action="/campgrounds/<%= campground._id %>?_method=put"
		method="post">
		<div class="mb-3">
			<label for="campground[title]" class="form-label">Title</label>
			<input
				required
				type="text"
				class="form-control"
				id="campground[title]"
				name="campground[title]"
				value="<%= campground.title %>" />
		</div>
		<div class="mb-3">
			<label for="campground[location]" class="form-label">Location</label>
			<input
				required
				type="text"
				class="form-control"
				id="campground[location]"
				name="campground[location]"
				value="<%= campground.location %>" />
		</div>
		<div class="mb-3">
			<label for="campground[image]" class="form-label">Image</label>
			<input
				required
				type="text"
				class="form-control"
				id="campground[image]"
				name="campground[image]"
				value="<%= campground.image %>" />
		</div>
		<div class="mb-3">
			<label for="campground[description]" class="form-label"
				>Description</label
			>
			<textarea
				required
				type="text"
				class="form-control"
				id="campground[description]"
				name="campground[description]">
<%= campground.description %></textarea
			>
		</div>
		<div class="input-group mb-3">
			<span class="input-group-text" id="price">â‚¬</span>
			<input
				required
				type="number"
				step="0.01"
				class="form-control"
				placeholder="0.00"
				aria-label="price"
				aria-describedby="price"
				name="campground[price]"
				value="<%= campground.price %>" />
		</div>
		<button type="submit" class="btn btn-success">Submit</button>
		<button type="submit" form="delete" class="btn btn-danger">Delete</button>
	</form>
	<form
		action="/campgrounds/<%= campground._id %>?_method=delete"
		id="delete"
		method="post"></form>
</div>
